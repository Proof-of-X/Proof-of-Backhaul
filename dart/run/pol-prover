#!/bin/sh

dir=`dirname $0`

while :
do
	if [ ! -v "$DISABLE_POL_UPDATES" ]
	then
		if [ -e "new--run-pol-prover.exe" ]
		then
			mv new--run-pol-prover.exe run-pol-prover.exe
			chmod +x run-pol-prover.exe
		fi
	fi

	./run-pol-prover.exe $1 $2 $3 $4 $5 $6 $7 $8 $9

	echo "================> Restarting ===================="
	sleep 1
done
